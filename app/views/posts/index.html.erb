<% @posts.each do |post|%>
<table>
	<th>Title:</th>
	<th>Content:</th>
	<tr>
		<td><%= post.title%></td>
		<td><%= post.content%></td>
		<td><%= link_to "Add Comment", new_post_comment_path(post.id) %>
		<td><%= link_to "Show", post_path(post.id)%></td>
		<td><%= link_to "Delete", post_path(post.id), method: :delete, data:{ confirm: "Are you sure ?"}%>
		</td>
		<td><%= link_to "show comments", post_comment_path(:post_id, :id)%></td>
	</tr>
</table>
<%end%>
<%= link_to "Create New Post", new_post_path%>